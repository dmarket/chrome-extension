      ],
      "@myth/dm-ext-shared-utils": ["libs/dmarket-chrome-extension/shared/utils/src/index.ts"],
      "@myth/dm-ext-ui-base": ["libs/dmarket-chrome-extension/ui/base/src/index.ts"],
