        "libs/dmarket-chrome-extension/feature/settings/src/index.ts"
      ],
      "@myth/dm-ext-feature-phishing-blocker": [
        "libs/dmarket-chrome-extension/feature/phishing-blocker/src/index.ts"
      ],
      "@myth/dm-ext-layout-main": ["libs/dmarket-chrome-extension/layout/main/src/index.ts"],
