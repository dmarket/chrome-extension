      "@myth/todo-core-util-api": ["libs/todo/core/util-api/src/index.ts"],
      "@myth/todo-core-util-envs": ["libs/todo/core/util-envs/src/index.ts"],
      "@myth/todo-core-util-providers": ["libs/todo/core/util-providers/src/index.ts"],
      "@myth/todo-feature-flags": ["libs/todo/feature-flags/src/index.ts"]
